<?xml version="1.0" encoding="utf-8"?>
<!--
    Play Store Manifest: "Assisted Reply" Mode
    
    This manifest REMOVES restricted permissions (READ_CALL_LOG, SEND_SMS)
    to comply with Google Play policies. The app will detect missed calls
    via notification and prompt the user to tap to send a message.
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--
        Play Store version does NOT request:
        - READ_CALL_LOG (restricted)
        - SEND_SMS (restricted)
        - READ_CONTACTS (optional, removed for Play simplicity)
        
        We explicitly REMOVE these to ensure they don't merge from main:
    -->
    <uses-permission android:name="android.permission.READ_CALL_LOG" tools:node="remove" />
    <uses-permission android:name="android.permission.SEND_SMS" tools:node="remove" />
    <uses-permission android:name="android.permission.READ_CONTACTS" tools:node="remove" />

</manifest>
